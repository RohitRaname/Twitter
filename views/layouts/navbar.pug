
nav.nav
    .nav__content
        ul.nav__list
            if(login_user)
                -const cur_user_profile_link = `/users/${cur_user.avatar.slice(1)}`;
                -const cur_user_profile_pic =`/img/users/${cur_user.profilePic}`
                li.nav__item.nav__item--logo.mg-lw
                    a.nav__link.nav__link--logo(href='/')
                        i.logo__icon.nav__icon--logo.fa.fa-twitter
                li.nav__item(data-active='true' data-section="home")
                  
                    a.nav__link(href='/')
                        i.nav__icon.nav__icon--home.fa.fa-home
                        i.nav__icon.nav__icon--home.fa.fa-home.hidden
                            p.nav__indicator &nbsp;
                        span.nav__text  Home 
                li.nav__item(data-active="false" data-section="explore") 
                    a.nav__link(href='/news/explore/general')
                        i.nav__icon.fa.fa-wpexplorer
                        i.nav__icon.fa.fa-hashtag.hidden
                        span.nav__text  Explore 
                li.nav__item(data-active="false" data-section="notification")
                    a.nav__link(href='/notifications')
                        i.nav__icon.fa.fa-bell-o
                        i.nav__icon.hidden.fas.fa-bell
                        span.nav__text  Notifications 
                li.nav__item(data-active="false" data-section="message")
                    a.nav__link(href='/messages')
                        i.nav__icon.fa.fa-envelope-o
                        i.nav__icon.fas.fa-envelope.hidden
                        span.nav__text  Messages 
                li.nav__item(data-active="false" data-section="bookmark")
                    a.nav__link(href='/bookmarks')
                        i.nav__icon.fa.fa-bookmark-o
                        i.nav__icon.fa.fa-bookmark.hidden
                        span.nav__text  Bookmarks 
                li.nav__item(data-active="false" data-section="user-profile")
                    a.nav__link(href=`/users/${cur_user.avatar.slice(1
                    )}`)
                        i.nav__icon.fa.fa-user-o
                        i.nav__icon.fa.fa-user.hidden
                        span.nav__text  Profile 
                li.nav__item.mg-lw(data-dropdown-btn data-dropdown-class="settings")
                    a.nav__link
                        i.nav__icon.fa.fa-sliders
                        span.nav__text  More 

                button.btn--primary.nav__tweet-btn
                    i.fas.fa-feather-alt.hidden
                    span Tweet

                .user__nav-box(data-dropdown-btn data-dropdown-class="user-logout")
                    img.user__nav-img.img--sm(src=`/img/users/${cur_user.profilePic || "default.png"}` alt='User gmail photo')
                    p.user__nav-name.p--md= cur_user.name
                    p.user__nav-gmail.t--lw= cur_user.avatar
                    i.nav__icon.user__nav-icon.fa.fa-ellipsis-h

            else
                li.nav__item.nav__item--logo.mg-lw
                    a.nav__link.nav__link--logo(href='/')
                        i.logo__icon.nav__icon--logo.fa.fa-twitter

                li.nav__item
                    a.nav__link(href='/news/explore/general')
                        i.nav__icon.fa.fa-wpexplorer
                        span.nav__text  Explore 


        // mobile user navigation

    if(login_user)
        -const cur_user_profile_link = `/users/${cur_user.avatar.slice(1)}`;
        -const cur_user_profile_pic =`/img/users/${cur_user.profilePic}`

        .mobile-nav.hide
                //- .mobile-nav-btn(data-active="false")
