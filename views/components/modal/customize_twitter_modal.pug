.modal.hidden(data-modal='customise-twitter-view')
    .overlay
    .modal-container.customize.p-sm(data-height='fixed-height')
        header.center.modal-header
            div.f-sm.f-3.f-1
                button.btn--icon-fixed(data-action="back")
                    i.fa.fa-arrow-left
                h5.h-5.mg-lw Customize your view
            p.t--md
                | These settings affect all the Twitter accounts on this browser
        .preview-tweet.mg-lw
            .tweet.postedTweet.preview-item-container.dropdown-details
                .tweet-container(data-active='false')
                    a(href='/users/rana')
                        img.tweet-img.img--md(src='../../../img/twitter/pic.jpg')
                    .tweet-content
                        .tweet-user__info
                            a.tweet-user__name.h-8(href='/users/rana') Twitter
                            a.tweet-user__verified
                            p.tweet-user__email.t--md(href='/users/rana')
                                | @Twitter
                            p.tweet-user__postTime.t--md 2min
                        .tweet-message.p--md
                            | At the heart of Twitter are short messages called Tweets &mdash;
                            | just like this one &mdash; which can include photos, videos, links,
                            | text, hashtags, and mentions like
                            span.blue  @Twitter. 
        // font size
        .customize-group.mg-sm(data-group='font-size')
            p.t--md.mg-sl.customize-group-title Font size
            .customize-box.f-sm
                p.p--lw Aa
                .customize-box-content
                    .customize-fontsize-select-track-line
                    .customize-size-pointer(data-font-size='56.25%' data-active='false')
                    .customize-size-pointer(data-font-size='60%' data-active='false')
                    .customize-size-pointer(data-font-size='62.25%' data-active='false')
                    .customize-size-pointer(data-font-size='64%' data-active='false')
                    .customize-size-pointer(data-font-size='66%' data-active='false')
                t.p Aa
        // color
        .customize-group.mg-sm(data-group='color')
            p.t--md.mg-sl.customize-group-title Color
            .customize-box
                .customize-box-content.f-sm
                    .customize-color-pointer(data-active='false' data-color='primary')
                        i.fas.fa-check
                    .customize-color-pointer(data-active='false' data-color='secondary')
                        i.fas.fa-check
                    .customize-color-pointer(data-active='false' data-color='tertiary')
                        i.fas.fa-check
                    .customize-color-pointer(data-active='false' data-color='quad')
                        i.fas.fa-check
                    .customize-color-pointer(data-active='false' data-color='pent')
                        i.fas.fa-check
                    .customize-color-pointer(data-active='false' data-color='hex')
                        i.fas.fa-check
        // background
        .customize-group.mg-sm(data-group='background-color')
            p.t--md.mg-sl.customize-group-title Background
            .customize-box
                .customize-box-content.f-sm
                    .customize-background-box.f-sm(data-theme='light' data-active='false')
                        .customize-background-pointer
                            i.fas.fa-check
                        p.customize-background-text(data-color='white')
                            | Default
                    //
                        <div class="customize-background-box f-sm" data-theme="grey" data-active="false">
                        <div class="customize-background-pointer" >
                        <i class="fas fa-check"></i>
                        </div>
                        <p class="customize-background-text" data-color="primary">
                        Dim
                        </p>
                        </div>
                    .customize-background-box.f-sm(data-theme='dark' data-active='false')
                        .customize-background-pointer
                            i.fas.fa-check
                        p.customize-background-text(data-color='dark')
                            | Lights out
        .f-c
            .btn--primary.btn--sm.submit_btn Done
