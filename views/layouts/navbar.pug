                                        button.btn--icon-fixed.btn--outline(data-action='show-manage-accounts-modal')
                                            i.fas.fa-ellipsis-h(aria-hidden='true')
                            // name and avatar
                            .f-col.f-1
                                a(href=`${cur_user_profile_link}`)
