form.form.form--forgotPassword(data-form='forgotPassword' data-optional='false' data-action='reset-password' data-all-input-fields-valid='false' onsubmit='return false;'
data-progress-line-exist="true" 
data-is_form_hidden="true" 
data-form_submitting="false"
 )
    .form-overlay.overlay &nbsp;
    .form-container.abs-center
        div.progress-line(data-progress='0')
        button.btn--icon.form-closeBtn(data-action='close')
            i.fa.fa-times
        .form-content
            .center.mg-sm.m-center
                i.fab.fa-twitter.icon--simple
            h4.h-4.mg-bg Enter New password
            .form-groups.mg-lg
                .form-group(data-field='name,email' data-input-filled='true' data-active='false' data-error='false' data-disabled='true')
                    label.form-label(for='email') email
                    input#email.form-input(type='text' name='email' value=`${email}` disabled)
                    // <p class="form-error hidden">What's your name?</p>
                .form-group.mg-bg(data-field='password' data-input-filled='false' data-active='false' data-error='false')
                    label.form-label(for='name') Password
                    input#password.form-input(type='password' name='password' minLength="8")
                    p.form-error.hidden Min Length 8
                    //- p.form-hint
                    button.btn--icon.form-hint.form-hint--seePassword(data-active='false' data-action='see-password')
                        i.fas.fa-eye
            .form-submitBtn__box
                button.btn--white.btn--100.form-submitBtn(disabled='' data-action='login')
                    | Log in
